@model CarServiceMS.Models.BindingModels.AdminBindingModel

@{
    ViewData["Title"] = "Register New Admin";
    
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="RegisterAdmin" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecretPassword"></label>
                <input asp-for="SecretPassword" class="form-control" />
                <span asp-validation-for="SecretPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register Admin</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
