@model CarServiceMS.Models.BindingModels.EditCarBindingModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1 class="text-center">Edit the car here!</h1>


<form asp-controller="UsersAdmin" asp-action="EditUsersCar" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Brand" class="font-weight-bold"></label>
            </div>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Model" class="font-weight-bold"></label>
            </div>
            <input asp-for="Model" class="form-control" type="text" placeholder="Model..." />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-lg-center">
                <label asp-for="YearFrom" class="font-weight-bold"></label>
            </div>
            <input asp-for="YearFrom" class="form-control" type="date" placeholder="Year..." />
            <span asp-validation-for="YearFrom" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div>
                <label asp-for="Number" class="font-weight-bold"></label>
            </div>
            <input asp-for="Number" class="form-control" type="text" placeholder="Number..." />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        <input asp-for="Id" type="hidden" />
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="badge-dark">Edit Car</button>
    </div>

</form>

<script src="~/lib/jquery/dist/jquery.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}