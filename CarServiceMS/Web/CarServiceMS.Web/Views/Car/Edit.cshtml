@model CarServiceMS.Web.InputModels.CarInputModels.CarEditInputModel


<body style="background-image: url(/images/backgorund_2.jpg-1.png); background-size: 100% ">




    <div class="row">
        <div class="col-sm-2"></div>

        <div class="col-lg-8">
            <div class="box border-dark container-fluid" style="border-style:solid;border-radius:5%; overflow-x:auto;">
                <h1 align="center" style="padding-bottom:30px; padding-top:20px">Edit your car here!</h1>
                <form asp-controller="Car" asp-action="Edit" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group w-45" style="margin-right:13%">
                            <div class="d-flex justify-content-center">
                                <label asp-for="Brand" class="font-weight-bold"></label>
                            </div>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="form-group w-45">
                            <div class="d-flex justify-content-center">
                                <label asp-for="Model" class="font-weight-bold"></label>
                            </div>
                            <input asp-for="Model" class="form-control" type="text" placeholder="Model..." />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">
                        <div class="form-group w-45" style="margin-right:14%">
                            <div class="d-flex justify-content-lg-center">
                                <label asp-for="YearFrom" class="font-weight-bold"></label>
                            </div>
                            <input asp-for="YearFrom" class="form-control" type="date" placeholder="Year..." />
                            <span asp-validation-for="YearFrom" class="text-danger"></span>
                        </div>
                        <div class="form-group w-45">
                            <div class="d-flex justify-content-lg-center">
                                <label asp-for="Number" class="font-weight-bold"></label>
                            </div>
                            <input asp-for="Number" class="form-control" type="text" placeholder="Number..." />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>

                        <input asp-for="Id" type="hidden" />
                    </div>
                    <hr class="mt-3 bg-eventures hr-2" />
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="button_Dark" style="width:50%">Edit Your Car</button>
                    </div>

                </form>
            </div>
        </div>
        <div class="col-sm-2"></div>

    </div>


</body>



<script src="~/lib/jquery/dist/jquery.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}